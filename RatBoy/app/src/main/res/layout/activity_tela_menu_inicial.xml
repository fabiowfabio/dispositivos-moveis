<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ratboy.ratboy.TelaMenuInicial">


    <ImageView
    android:id="@+id/imagem_tela_inicial"
    android:layout_width="195dp"
    android:layout_height="83dp"
    android:layout_marginBottom="456dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:srcCompat="@drawable/img_login" />

    <ImageButton
        android:id="@+id/iconeCamiseta"
        android:layout_width="137dp"
        android:layout_height="137dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="204dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_camiseta" />

    <ImageButton
        android:id="@+id/iconeCamera"
        android:layout_width="137dp"
        android:layout_height="137dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="204dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_camera" />

    <ImageButton
        android:id="@+id/iconeCadeado"
        android:layout_width="137dp"
        android:layout_height="137dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="373dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cadeado" />

    <ImageButton
        android:id="@+id/iconeSair"
        android:layout_width="137dp"
        android:layout_height="137dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="373dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_sair" />

</android.support.constraint.ConstraintLayout>
